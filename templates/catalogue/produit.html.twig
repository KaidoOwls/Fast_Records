        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="card" style="background-color: lightyellow; color: black;">
                    <div class="row">
                        <div class="col-md-6 text-center align-self-center">
                            <img class="img-fluid" src="https://mdbcdn.b-cdn.net/img/new/standard/nature/111.webp" alt="{{ produit.getLibelleCourt() }}">
                        </div>
                        <div class="col-md-6 info">
                            <div class="row title">
                                <div class="col"><h2>{{ produit.getLibelleCourt() }}</h2></div>
                                <div class="col text-right"><a href="#"><i class="fa fa-heart-o"></i></a></div>
                            </div>
                            <p>{{ produit.getLibelleLong() }}</p>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star-half-full"></span>
                            <span id="reviews">1590 Avis</span>
                            <div class="row price">
                                <label class="radio">
                                    <span>
                                        <div class="row">{{ produit.getPrix() }} â‚¬</div>
                                    </span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="row lower">
                        <div class="col">
                            <a class="carousel-control-prev" href="#demo" data-slide="prev"><i class="fa fa-arrow-left"></i></a>
                            <a class="carousel-control-next" href="#demo" data-slide="next"><i class="fa fa-arrow-right"></i></a>
                        </div>
                        <div class="col text-center align-self-center">
                            <button class="btn btn-dark">Ajouter au panier</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
